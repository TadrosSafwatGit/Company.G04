@model Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-4">
    <h1 class="text-primary text-center">📄 Employee Details</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="p-4 border rounded bg-light shadow">

                @* 🖼️ Employee Image *@
                @if (!string.IsNullOrEmpty(Model.ImageName))
                {
                    <div class="text-center mb-4">
                        <img src="~/files/images/@Model.ImageName" class="img-fluid rounded-circle shadow" alt="Employee Image" style="width: 150px; height: 150px; object-fit: cover;" />
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label fw-bold">📛 Name</label>
                    <input readonly asp-for="Name" class="form-control bg-white" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">🎂 Age</label>
                    <input readonly asp-for="Age" class="form-control bg-white" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">📧 Email</label>
                    <input readonly asp-for="Email" class="form-control bg-white" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">📞 Phone</label>
                    <input readonly asp-for="Phone" class="form-control bg-white" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">💰 Salary</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input readonly asp-for="Salary" class="form-control bg-white" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">📅 Hiring Date</label>
                    <input readonly asp-for="HiringDate" type="date" class="form-control bg-white" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">📅 Created At</label>
                    <input readonly asp-for="CreateAt" type="date" class="form-control bg-white" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">🏢 Department</label>
                    <input readonly class="form-control bg-white" value="@Model.Department?.Name ?? " N /A"" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">✅ Active</label>
                    <input readonly class="form-control bg-white" value="@(Model.IsActive ? "Yes" : "No")" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">🗑️ Deleted</label>
                    <input readonly class="form-control bg-white" value="@(Model.IsDeleted ? "Yes" : "No")" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FontAwesome Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
