@model Employee
@inject IDepartmentRepositories _departmentRepository

@{
    ViewData["Title"] = "Edit Employee";
    var departments = new SelectList(_departmentRepository.GetAll(), "Id", "Name", Model.DepartmentId);
}

<div class="container mt-4">
    <h1 class="text-primary text-center">✏️ Edit Employee</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="p-4 border rounded bg-light shadow">

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Age" class="form-label fw-bold"></label>
                    <input asp-for="Age" type="number" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-bold"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Salary" class="form-label fw-bold"></label>
                    <input asp-for="Salary" type="number" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label fw-bold">🏢 Department</label>
                    <select asp-for="DepartmentId" asp-items="departments" class="form-select">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsDeleted" class="form-check-input" />
                    <label asp-for="IsDeleted" class="form-check-label"></label>
                </div>

                <div class="mb-3">
                    <label asp-for="HiringDate" class="form-label fw-bold"></label>
                    <input asp-for="HiringDate" type="date" class="form-control" />
                    <span asp-validation-for="HiringDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreateAt" class="form-label fw-bold"></label>
                    <input asp-for="CreateAt" type="date" class="form-control" />
                    <span asp-validation-for="CreateAt" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
