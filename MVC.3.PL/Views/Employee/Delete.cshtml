@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-danger">🗑️ Delete Employee</h1>
        <a asp-action="Index" class="btn btn-light">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <hr />

    <div class="card shadow-lg p-4 border border-danger">

        @* 🖼️ Employee Image *@
        @if (!string.IsNullOrEmpty(Model.ImageName))
        {
            <div class="text-center mb-4">
                <img src="~/files/images/@Model.ImageName" class="img-fluid rounded-circle shadow" alt="Employee Image" style="width: 150px; height: 150px; object-fit: cover;" />
            </div>
        }

        <h4 class="text-center text-warning mb-4">
            ⚠️ Are you sure you want to delete this employee?
        </h4>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">📛 Name</label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Age" class="form-label fw-bold">🎂 Age</label>
                        <input asp-for="Age" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">📧 Email</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label fw-bold">🏠 Address</label>
                        <input asp-for="Address" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label fw-bold">📞 Phone</label>
                        <input asp-for="Phone" class="form-control" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Salary" class="form-label fw-bold">💰 Salary</label>
                        <input class="form-control" value="$@Model.Salary.ToString("N2")" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="HiringDate" class="form-label fw-bold">📅 Hiring Date</label>
                        <input class="form-control" value="@Model.HiringDate.ToString("yyyy-MM-dd")" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CreateAt" class="form-label fw-bold">📅 Created At</label>
                        <input class="form-control" value="@Model.CreateAt.ToString("yyyy-MM-dd")" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">✅ Active</label>
                        <input class="form-control" value="@(Model.IsActive ? "Yes" : "No")" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">🗑️ Deleted</label>
                        <input class="form-control" value="@(Model.IsDeleted ? "Yes" : "No")" readonly />
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-danger px-4 me-2">
                    <i class="fas fa-trash-alt"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-ban"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<!-- FontAwesome Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
