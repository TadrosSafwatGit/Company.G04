@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-danger">🗑️ Delete Employee</h1>
        <a asp-action="Index" class="btn btn-light">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <hr />

    <div class="card shadow-lg p-4 border-danger">
        <h4 class="text-center text-warning">⚠️ Are you sure you want to delete this employee?</h4>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="my-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>
                    <div class="my-3">
                        <label asp-for="Age" class="form-label"></label>
                        <input asp-for="Age" class="form-control" readonly />
                    </div>
                    <div class="my-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                    <div class="my-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" readonly />
                    </div>
                    <div class="my-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="my-3">
                        <label asp-for="Salary" class="form-label"></label>
                        <input class="form-control" value="$@Model.Salary" readonly />
                    </div>
                    <div class="my-3">
                        <label asp-for="HiringDate" class="form-label"></label>
                        <input class="form-control" value="@Model.HiringDate.ToString("yyyy-MM-dd")" readonly />
                    </div>
                    <div class="my-3">
                        <label asp-for="CreateAt" class="form-label"></label>
                        <input class="form-control" value="@Model.CreateAt.ToString("yyyy-MM-dd")" readonly />
                    </div>
                    <div class="my-3">
                        <label class="form-label">Active</label>
                        <input type="text" class="form-control" value="@(Model.IsActive ? "Yes" : "No")" readonly />
                    </div>
                    <div class="my-3">
                        <label class="form-label">Deleted</label>
                        <input type="text" class="form-control" value="@(Model.IsDeleted ? "Yes" : "No")" readonly />
                    </div>
                </div>
            </div>

            <div class="mt-3 text-center">
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fas fa-trash-alt"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-ban"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<!-- FontAwesome Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
