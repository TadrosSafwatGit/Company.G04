@model CreateEmployeeDto
@inject IDepartmentRepositories _departmentRepository

@{
    ViewData["Title"] = "Create Employee";
    var departments = new SelectList(_departmentRepository.GetAll(), "Id", "Name");
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold"><i class="fas fa-user-plus"></i> Create Employee</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow rounded-4 border-0">
        <div class="card-body p-4">
            <form asp-action="Create" class="row g-4" enctype="multipart/form-data">

                <!-- Left Column -->
                <div class="col-md-6">
                    <div>
                        <label asp-for="Name" class="form-label fw-semibold">📛 Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div>
                        <label asp-for="Age" class="form-label fw-semibold">🎂 Age</label>
                        <input asp-for="Age" class="form-control" placeholder="Enter age" />
                        <span asp-validation-for="Age" class="text-danger small"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="form-label fw-semibold">📧 Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div>
                        <label asp-for="Address" class="form-label fw-semibold">🏠 Address</label>
                        <input asp-for="Address" class="form-control" placeholder="Enter address" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div>
                        <label asp-for="Phone" class="form-label fw-semibold">📞 Phone</label>
                        <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div>
                        <label asp-for="Salary" class="form-label fw-semibold">💰 Salary ($)</label>
                        <input asp-for="Salary" class="form-control" placeholder="Enter salary" />
                        <span asp-validation-for="Salary" class="text-danger small"></span>
                    </div>

                    <div>
                        <label asp-for="HiringDate" class="form-label fw-semibold">📅 Hiring Date</label>
                        <input asp-for="HiringDate" type="date" class="form-control" />
                        <span asp-validation-for="HiringDate" class="text-danger small"></span>
                    </div>

                    <div>
                        <label asp-for="CreateAt" class="form-label fw-semibold">📅 Created At</label>
                        <input asp-for="CreateAt" type="date" class="form-control" />
                        <span asp-validation-for="CreateAt" class="text-danger small"></span>
                    </div>




                    <div class="mb-3">
                        <label asp-for="Image" class="form-label fw-semibold">🖼️ Upload Your Photo</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">
                                <i class="fas fa-upload"></i>
                            </span>
                            <input asp-for="Image" type="file" class="form-control" />
                        </div>
                        <span asp-validation-for="Image" class="text-danger small"></span>
                    </div>


                   @*file*@





                    <div>
                        <label asp-for="DepartmentId" class="form-label fw-semibold">🏢 Department</label>
                        <select asp-for="DepartmentId" asp-items="departments" class="form-select">
                            <option value="">-- Select Department --</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                    </div>

                    <div class="form-check mt-3">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label fw-semibold">✅ Active</label>
                    </div>

                    <div class="form-check">
                        <input asp-for="IsDeleted" class="form-check-input" />
                        <label asp-for="IsDeleted" class="form-check-label fw-semibold">🗑️ Deleted</label>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="col-12 text-center mt-4">
                    <button type="submit" class="btn btn-primary px-5 me-2">
                        <i class="fas fa-save"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-ban"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- FontAwesome Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
