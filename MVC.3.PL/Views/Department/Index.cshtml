@using Company.G04.DAl.Models
@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-primary">📂 All Departments</h1>
        <a asp-action="Create" asp-controller="Department" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create Department
        </a>
    </div>

    <hr />

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>📌 Code</th>
                        <th>📛 Name</th>
                        <th>📅 Date of Creation</th>
                        <th>🔍 Details</th>
                        <th>✏️ Update</th>
                        <th>🗑️ Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Code</strong></td>
                            <td>@item.Name</td>
                            <td>@item.CreateAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this department?');">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="mt-4 alert alert-info text-center">
            <h4>🚀 No Departments Available</h4>
            <p>Add new departments to see them here.</p>
        </div>
    }
</div>

<!-- FontAwesome Icons (if needed) -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
