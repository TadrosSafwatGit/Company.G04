@model Department

@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-4">
    <h1 class="text-primary text-center">📄 Department Details</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="p-4 border rounded bg-light shadow">
                <div class="mb-3">
                    <label asp-for="Code" class="form-label fw-bold"></label>
                    <input readonly asp-for="Code" class="form-control bg-white" />
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input readonly asp-for="Name" class="form-control bg-white" />
                </div>

                <div class="mb-3">
                    <label asp-for="CreateAt" class="form-label fw-bold"></label>
                    <input readonly asp-for="CreateAt" type="date" class="form-control bg-white" />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FontAwesome Icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
